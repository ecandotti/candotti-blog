{% if app.user %}
    {% for share in article.shares %}
        {% if share.user.id == app.user.id %}
            <a href="{{ path('del_shares', { 'id': article.id }) }}" class="card-link" tabindex="0">
                <i class="fas fa-share-square"></i>
            </a>
        {% else %}
            <a href="{{ path('add_shares', { 'id': article.id }) }}" class="card-link" tabindex="0">
                <i class="far fa-share-square"></i>
            </a>
        {% endif %}
    {% else %}
        <a href="{{ path('add_shares', { 'id': article.id }) }}" class="card-link" tabindex="0">
            <i class="far fa-share-square"></i>
        </a>
    {% endfor %}
{% else %}
    <a href="{{ path('login') }}" class="card-link" tabindex="0">
        <i class="far fa-share-square"></i>
    </a>
{% endif %}