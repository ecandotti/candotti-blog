{% extends 'base.html.twig' %}

{% block title %}Changer son mot de passe{% endblock %}

{% block body %}
    {% for messages in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert" tabindex="0">&times;</button>
            {{ messages }}
        </div>
    {% endfor %}
    {% for messages in app.flashes('error') %}
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert" tabindex="0">&times;</button>
            {{ messages }}
        </div>
    {% endfor %}
    <h1 class="text-center mb-4">Changer son mot de passe</h1>

    {% include "user/_menu.html.twig" %}

    <section>
        <div class="d-flex flex-column">
            {{ form_start(passForm) }}
                {{ form_row(passForm.oldPassword) }}
                {{ form_row(passForm.newPassword.first) }}
                {{ form_row(passForm.newPassword.second) }}
                {{ form_row(passForm.save) }}
            {{ form_end(passForm) }}
        </div>
    </section>

{% endblock %}