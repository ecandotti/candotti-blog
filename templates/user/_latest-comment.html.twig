<section class="my-4">
    <div class="my-3">
        <h2>Vos 5 derniers articles commentés :</h2>
    </div>
    <div class="d-flex flex-column flex-lg-row">
    {% for comment in fifth_article_comment %}
        <a href="{{ path('article_show', {'id': comment.article.id}) }}" class="text-decoration-none text-reset">
            <div class="flex-grow-1 card border-secondary mb-2 mr-2">
                <div class="card-header">{{ comment.article.title }}</div>
                <div class="card-body">
                    <div>
                        {# {% if comment.image %}
                            <img src="{{ asset('/uploads/' ~ article.image.name) }}" alt="" height="200"/>
                        {% else %} #}
                            <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                                <rect width="100%" height="100%" fill="#868e96"></rect>
                                <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Pas d'image</text>
                            </svg>
                        {# {% endif %} #}
                    </div>
                    <h6 class="mt-1">
                        Catégorie : 
                        <span class="mb-1 text-secondary">{{ comment.article.category.name}}</span>
                    </h6>
                </div>
            </div>
        </a>
    {% endfor %}
    </div>
    {% if not fifth_article_comment %}
        <div class="text-center my-4 border p-4 text-muted">
            Vous semblez ne pas avoir commenté d'article
        </div>
    {% endif %}
</section>