{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    {% for messages in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert" tabindex="0">&times;</button>
            {{ messages }}
        </div>
    {% endfor %}
    <h1 class="text-center mb-4">GÃ©rer les commentaires</h1>

    {% include "admin/_menu.html.twig" %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Article</th>
                <th scope="col">Commentaire</th>
                <th scope="col">Satuts</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <th scope="row">{{ comment.article.title }}</th>
                    <td>{{ comment.content }}</td>
                    <td>
                        {% if comment.status == "W" %}
                            <span class="text-warning">En attente</span>
                        {% endif %}
                        {% if comment.status == "V" %}
                            <span class="text-success">Valider</span>
                        {% endif %}
                        {% if comment.status == "R" %}
                            <span class="text-danger">Refuser</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="d-flex">
                            <a href="{{ path('comment_action', {'status': 'V', 'commentId': comment.id}) }}" class="btn btn-success mr-2 mb-2">Valider</a>
                            <a href="{{ path('comment_action', {'status': 'R', 'commentId': comment.id}) }}" class="btn btn-danger mr-2 mb-2">Refuser</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        {{ knp_pagination_render(comments) }}
    </div>

{% endblock %}