{% extends 'base.html.twig' %}

{% block title %}Articles commentés{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Articles commentés</h1>

    {% include "user/_menu.html.twig" %}

    {% if articles is not empty %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">{{ knp_pagination_sortable(articles, 'Titre', 'a.title') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(articles, 'Autheur', 'a.author') }}</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Contenu</th>
                    <th scope="col">Commentaire</th>
                    <th scope="col">{{ knp_pagination_sortable(articles, 'Date', 'a.createAt') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in articles %}
                    <tr>
                        <th scope="row">img</th>
                        <th scope="row"><a href="{{ path('article_show', { id: comment.article.id }) }}">{{ comment.article.title }}</th>
                        <th scope="row">{{ comment.user.firstName }} {{ comment.user.lastName }} </th>
                        <th scope="row">{{ comment.article.category.name }}</th>
                        <th scope="row">{{ comment.article.content|slice(0,10) ~ '...' }}</th>
                        <th scope="row">{{ comment.content|slice(0,10) ~ '...' }}</th>
                        <th scope="row">{{ comment.article.createAt|date('d/m/Y') }}</th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-center d-flex justify-content-center">
            {{ knp_pagination_render(articles) }}
        </div>
    {% else %}
        <div class="text-center my-4 border p-4 text-muted">
            Aucun article commenté :(
        </div>
    {% endif %}

{% endblock %}