<section>
    <div class="d-flex justify-content-between align-items-center my-3">
        <h2>Derniers articles :</h2>
        <a href="{{ path('home')}}">Tous les articles</a>
    </div>
    <div class="d-flex flex-column flex-lg-row">
    {% for article_item in latest_article %}
    <a href="{{ path('article_show', {'id': article_item.id}) }}" class="text-decoration-none text-reset">
        <div class="flex-grow-1 card border-secondary mb-2 mr-2">
            <div class="card-header">{{ article_item.title }}</div>
            <div class="card-body">
                {% if article_item.image %}
                    <img src="{{ asset('/uploads/' ~ article_item.image.name) }}" alt="" height="200" width="100%"/>
                {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                        <rect width="100%" height="100%" fill="#868e96"></rect>
                        <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Pas d'image</text>
                    </svg>
                {% endif %}
                <h6 class="mt-1">Cat√©gorie :</h6>
                <h6 class="mb-1 text-secondary">{{ article_item.category}}</h6>
            </div>
        </div>
    </a>
    {% endfor %}
    </div>
</section>